{
  "name": "morden-team/morden-security",
  "description": "Advanced WordPress security plugin with AI-powered threat detection",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Morden Team",
      "homepage": "https://mordenhost.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.6",
    "wp-coding-standards/wpcs": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "MordenSecurity\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MordenSecurity\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=WordPress src/",
    "phpcbf": "phpcbf --standard=WordPress src/"
  }
}

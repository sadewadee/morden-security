{
    "name": "sadewadee/morden-security",
    "description": "Advanced WordPress security plugin with AI-powered threat detection",
    "type": "wordpress-plugin",
    "keywords": ["wordpress", "security", "firewall", "bot-detection", "ip-blocking"],
    "homepage": "https://github.com/sadewadee/morden-security",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Sadewa Dee",
            "email": "sadewa@mordenhost.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-sqlite3": "*",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "MordenSecurity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MordenSecurity\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage-html"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
